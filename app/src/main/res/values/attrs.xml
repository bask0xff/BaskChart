<resources>

    <declare-styleable name="ChartCanvasView">
        <attr name="showLegend" format="boolean" />
        <attr name="labelPosition" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="BaskChartView">
        <attr name="titleText" format="string" />
        <attr name="renderType" format="enum">
            <enum name="opengl" value="0"/>
            <enum name="canvas" value="1"/>
        </attr>
        <attr name="themeType" format="enum">
            <enum name="dark" value="0"/>
            <enum name="light" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="TouchAreaButton">
    	<attr name="toucharea" format="string"/>
    </declare-styleable>


</resources>